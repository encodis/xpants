    <!-- load ant-contrib -->
    <taskdef resource="net/sf/antcontrib/antlib.xml"/>

    <!-- include macros/properties -->
    <dirname property="xpants.dir" file="${ant.file.python}"/>

    <include file="${xpants.dir}/attr-checks.xml"/>
    <include file="${xpants.dir}/file-utils.xml"/>

    <!-- macros -->

    <macrodef
        name="python"
        description="Run a python module or script">

        <attribute
            name="module"
            default=""
            description="Python module name"/>

        <attribute
            name="script"
            default=""
            description="Python script path"/>

        <attribute
            name="version"
            default=""
            description="Python version [2,3]"/>

        <attribute
            name="dir"
            default="."
            description="Directory to run module/script in"/>

        <element
            name="args"
            optional="true"
            description="Command line arguments"/>

        <sequential>

            <check-attr-set macro="python" name="dir" value="@{dir}"/>

            <fail message="[python] cannot specify 'module' and 'script' attributes together">
                <condition>
                    <and>
                        <not><equals arg1="@{module}" arg2=""/></not>
                        <not><equals arg1="@{script}" arg2=""/></not>
                    </and>
                </condition>
            </fail>

            <fail message="[python] 'version' must be '2', '3' or blank for system default">
                <condition>
                    <not>
                        <or>
                            <equals arg1="@{version}" arg2="2"/>
                            <equals arg1="@{version}" arg2="3"/>
                            <equals arg1="@{version}" arg2=""/>
                        </or>
                    </not>
                </condition>
            </fail>

            <!-- check python exists in path -->
            <check-exe-path property="python@{version}.exe" unless:set="python@{version}.exe"/>

            <!-- check script exists -->
            <check-file-exists macro="python" file="@{script}" unless:blank="@{script}"/>

            <!-- run module or script -->
            <exec
                executable="${python@{version}.exe}"
                searchpath="true"
                dir="@{dir}">
                <arg line="-m @{module}" unless:blank="@{module}"/>
                <arg line="@{script}" unless:blank="@{script}"/>
                <args/>
            </exec>
        </sequential>
    </macrodef>


    <!-- TODO delete this and replace with using bumpversion (or equivalent) -->
    <macrodef
        name="python-update-version"
        description="Update the setup config with a version number taken from the source script">

        <attribute
            name="script"
            description="Python script name"/>

        <sequential>

            <!-- check that setup.py exists -->
            <check-file-exists macro="python-update-version" file="setup.py"/>

            <!-- get version number from module -->
            <loadfile srcfile="@{script}" property="@{script}.version.number">
                <filterchain>
                    <tokenfilter>
                        <containsregex
                            pattern="__version__ = '(.*)'"
                            replace="\1"/>
                    </tokenfilter>
                    <striplinebreaks/>
                </filterchain>
            </loadfile>

            <echo message="[python-update-version] setting property '@{script}.version.number' to '${@{script}.version.number}'" if:true="${macro.debug}"/>

            <!-- insert version number into setup.py -->
            <replaceregexp file="setup.py"
                           match="version='[0-9\.]*'"
                           replace="version='${@{script}.version.number}'"
                           byline="true"/>

        </sequential>
    </macrodef>


    <macrodef
        name="python-build-distribution"
        description="Build a distribution for a python module">

        <attribute
            name="dir"
            default=""
            description="Distribution directory"/>

        <sequential>

            <python script="setup.py">
                <args>
                    <arg value="sdist"/>
                    <arg value="--formats=zip"/>
                    <arg value="--dist-dir=@{dir}" unless:blank="@{dir}"/>
                </args>
            </python>

        </sequential>
    </macrodef>


    <macrodef
        name="python-install-module"
        description="Install a python module">

        <attribute
            name="dir"
            default="."
            description="Distribution directory"/>

        <attribute
            name="module"
            description="Python module name"/>

        <attribute
            name="version"
            description="Python module version number"/>

        <sequential>

            <!-- check that setup.py exists -->
            <check-file-exists macro="python-install-module" file="setup.py"/>

            <!-- unzip to build -->
            <property name="temp.dir" value="${java.io.tmpdir}"/>
            <property name="temp.delete" value="true"/>

            <local name="unzip.dir"/>
            <tempfile property="unzip.dir" prefix="python-install-module" destdir="${temp.dir}" deleteonexit="${temp.delete}"/>

            <echo message="[python] temp.file=${temp.file}" if:true="${macro.debug}"/>

            <unzip src="@{dir}/@{module}-@{version}.zip" dest="${unzip.dir}"/>

            <!-- run python setup.py install in build/module-1.0.zip -->
            <python script="setup.py" dir="${unzip.dir}/@{module}-@{version}">
                <args>
                    <arg value="install"/>
                </args>
            </python>

        </sequential>
    </macrodef>

